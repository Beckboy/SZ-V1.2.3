<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcyView_imageSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="0.5"
        android:background="#000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_imageDir"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="全部图片"
            android:textSize="@dimen/f_32"
            android:textColor="#ffffff"
            android:drawableRight="@drawable/icon_triangle"
            android:paddingLeft="@dimen/dimen_20px"
            android:drawablePadding="@dimen/dimen_10px" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/tv_imageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="确定0/9"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:padding="@dimen/dimen_10px"
            android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>