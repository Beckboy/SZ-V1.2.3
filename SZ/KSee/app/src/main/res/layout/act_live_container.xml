<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.junhsue.ksee.view.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:background="@color/actionbar_base_background"
        app:title="直播详情"
        app:left_first_image="@drawable/selector_btn_head_back"
        app:left_first_visibility="visible"
        app:left_second_text="返回"
        app:title_style="normal_img" />

    <FrameLayout
        android:id="@+id/fl_container_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
