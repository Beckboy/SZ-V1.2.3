<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_base_background"
    android:orientation="vertical">

    <com.junhsue.ksee.view.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:background="@color/actionbar_base_background"
        app:left_first_visibility="gone"
        app:right_text="完成"
        app:title="支付成功"
        app:title_style="normal_img" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_corners"
            android:alpha="0.1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_corners"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_corners"
            android:alpha="0.5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_corners"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:background="@drawable/icon_pay_result_ok"
                android:scaleType="fitXY" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="恭喜你支付成功!"
                android:layout_marginTop="@dimen/dimen_50px"
                android:textColor="@color/c_black_3c4350"
                android:textSize="@dimen/dimen_48px" />

            <TextView
                android:id="@+id/txt_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_30px"
                android:text="订单号"
                android:textColor="@color/c_black_3c4350"
                android:textSize="@dimen/font_size_13sp" />
            <TextView
                android:id="@+id/txt_order_hint"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_50px"
                android:text="@string/msg_order_pay_result_hint"
                android:textColor="@color/c_gray_9da1a7"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/common_font_size_medium"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">
                <Button
                    android:id="@+id/btn_order_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80px"
                    android:layout_marginLeft="@dimen/common_padding"
                    android:layout_marginRight="@dimen/common_padding"
                    android:background="@color/page_base_background"
                    android:layout_marginBottom="@dimen/dimen_80px"
                    android:layout_gravity="bottom"
                    android:textColor="@color/c_flow_item_selector"
                    android:textSize="@dimen/common_font_size_normal"
                    android:text="查看订单详情"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
