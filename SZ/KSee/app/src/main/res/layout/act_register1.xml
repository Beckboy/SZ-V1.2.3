<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_register1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    tools:context="com.junhsue.ksee.Register1Activity">

    <LinearLayout
        android:id="@+id/ll_register1_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include layout="@layout/component_register1_actionbar"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/register_01"
        android:visibility="invisible"
        android:layout_below="@+id/ll_register1_actionbar"
        android:layout_marginTop="@dimen/dimen_8px"/>

    <ImageView
        android:id="@+id/img_register1_logo"
        android:layout_width="@dimen/dimen_102px"
        android:layout_height="@dimen/dimen_220px"
        android:layout_marginTop="@dimen/dimen_196px"
        android:layout_marginLeft="@dimen/dimen_50px"
        android:src="@drawable/pic_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dimen_120px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px">
        <include layout="@layout/component_register1_input"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_60px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_28px"
            android:textColor="#9DA1A7"
            android:text="已有账号？"/>

        <TextView
            android:id="@+id/btn_register1_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:textSize="@dimen/dimen_28px"
            android:textColor="#CDAC8D"
            android:clickable="true"
            android:onClick="onclick"/>
    </LinearLayout>

</RelativeLayout>
