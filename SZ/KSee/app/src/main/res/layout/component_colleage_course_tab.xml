<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="45dp"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_course_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主题课"
            android:textColor="@color/c_black_3c4350"
            android:textSize="@dimen/common_font_size_normal" />


        <TextView
            android:id="@+id/txt_course_system"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="系统课"
            android:textColor="@color/c_gray_999"
            android:textSize="@dimen/common_font_size_normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:adjustViewBounds="true"
            android:background="@color/c_black_3c4350" />

    </LinearLayout>





</LinearLayout>
