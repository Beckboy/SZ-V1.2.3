<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_home_content_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/img_live_foreshow_status"
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:background="@drawable/icon_home_content_video_tag"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_20px"
            android:text="大家都在看"
            android:textSize="@dimen/common_font_size_medium"
            android:textColor="@color/white"/>
        <LinearLayout
            android:id="@+id/ll_video_more"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginRight="@dimen/common_padding"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_video_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多 >"
                android:textColor="@color/c_gray_8392a0"
                android:textSize="@dimen/common_font_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_content_video_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_video_more"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common_padding"
            android:paddingRight="@dimen/common_padding"/>





    </RelativeLayout>
</LinearLayout>
