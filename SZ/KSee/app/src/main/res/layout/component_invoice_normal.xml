<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_108px"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="标题:"
        android:textColor="@color/c_gray_9da1a7"
        android:textSize="@dimen/f_28" />


      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_right_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/c_black_3c4350"
            android:textCursorDrawable="@drawable/bg_order_cursor"
            android:textSize="@dimen/f_28"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:gravity="center_vertical"
            android:hint="姓名"
            android:maxLines="1"
            android:background="@null"
            android:textColor="@color/c_black_3c4350"
            android:textColorHint="@color/c_gray_ccc"
            android:textCursorDrawable="@drawable/bg_order_cursor"
            android:textSize="@dimen/f_28" />
    </RelativeLayout>

</LinearLayout>
