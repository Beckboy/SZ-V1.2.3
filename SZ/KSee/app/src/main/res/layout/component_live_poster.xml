<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rl_live_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_450px"
                android:focusable="false"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/dimen_96px"
                android:layout_height="@dimen/dimen_100px"
                android:scaleType="fitXY"
                android:layout_alignRight="@+id/img_poster"
                android:layout_alignTop="@+id/img_poster"/>

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60px"
                android:paddingLeft="@dimen/dimen_30px"
                android:paddingRight="@dimen/dimen_30px"
                android:gravity="center_vertical"
                android:background="#993C4350"
                android:layout_alignBottom="@+id/img_poster">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/f_32"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>