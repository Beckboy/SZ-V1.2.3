<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="91dp"
    android:layout_alignParentBottom="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_20px"
        android:paddingRight="@dimen/dimen_20px">

        <LinearLayout
            android:id="@+id/ll_knowledge"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_110px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_knowledge"
                android:layout_width="@dimen/main_tab_bottom_width"
                android:layout_height="@dimen/main_tab_bottom_height"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_knowledge_normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_social_circle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_110px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_social_circle"
                android:layout_width="@dimen/main_tab_bottom_width"
                android:layout_height="@dimen/main_tab_bottom_height"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_social_circle_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_realize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_realize"
                android:layout_width="@dimen/dimen_120px"
                android:layout_height="@dimen/dimen_140px"
                android:adjustViewBounds="true"
                android:layout_marginBottom="@dimen/dimen_18px"
                android:background="@drawable/btn_senfposter_normal" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_college"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_110px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_colleage"
                android:layout_width="@dimen/main_tab_bottom_width"
                android:layout_height="@dimen/main_tab_bottom_height"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_college_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_space"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_110px"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_my_space"
                android:layout_width="@dimen/main_tab_bottom_width"
                android:layout_height="@dimen/main_tab_bottom_height"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_my_space_normal" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
