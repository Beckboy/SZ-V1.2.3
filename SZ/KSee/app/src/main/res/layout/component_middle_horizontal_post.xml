<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:junhsue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_no_pic"
            android:layout_width="@dimen/dimen_214px"
            android:layout_marginLeft="@dimen/dimen_40px"
            android:layout_height="@dimen/dimen_214px"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            junhsue:riv_corner_radius="@dimen/dimen_10px"
            />

        <TextView
            android:id="@+id/tv_normal_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_no_pic"
            android:ellipsize="end"
            android:maxLines="4"
            android:lineSpacingExtra="@dimen/dimen_10px"
            android:paddingBottom="@dimen/dimen_10px"
            android:paddingTop="@dimen/dimen_10px"
            android:textColor="#708293"
            android:textSize="@dimen/f_32" />
    </RelativeLayout>

</RelativeLayout>
