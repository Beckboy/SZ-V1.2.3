<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:junhsue="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_home_package_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            junhsue:riv_corner_radius="@dimen/dimen_20px"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:layout_marginTop="@dimen/dimen_32px"
            android:background="@drawable/shape_c_4d0000_corner_20px"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10px"
            android:paddingRight="@dimen/dimen_10px"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dimen_8px"
                android:background="@drawable/icon_open_eye" />

            <TextView
                android:id="@+id/tv_home_package_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.4k浏览"
                android:textColor="@color/c_gray_ccc"
                android:textSize="@dimen/f_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_package_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_16px"
            android:layout_marginTop="@dimen/dimen_32px"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/shape_c_739bfe_corner_20px"
            android:paddingLeft="@dimen/dimen_10px"
            android:paddingRight="@dimen/dimen_10px"
            android:text="#团队建设"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_24" />

        <TextView
            android:id="@+id/tv_home_package_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimen_16px"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/common_font_size_medium" />
    </RelativeLayout>

</RelativeLayout>
