<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_post_comment_blank_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_194px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_88px"
            android:gravity="center"
            android:text="@string/msg_post_comment_remind"
            android:textColor="@color/c_gray_aebdcd"
            android:textSize="@dimen/f_30" />

        <ImageView
            android:layout_width="@dimen/dimen_220px"
            android:layout_height="@dimen/dimen_220px"
            android:background="@drawable/icon_post_comment_blank" />

    </LinearLayout>
</RelativeLayout>
