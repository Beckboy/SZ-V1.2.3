<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_register1_phone"
        android:layout_width="match_parent"
        android:hint="你的手机号"
        android:inputType="number"
        android:maxLength="11"
        style="@style/edit_40_CCCCCC"/>

    <TextView
        style="@style/line_2_90_E2D7CC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_34px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edit_register1_verify"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="6"
            android:hint="你的验证码"
            android:imeOptions="actionSend"
            style="@style/edit_40_CCCCCC"/>

        <TextView
            android:id="@+id/btn_register1_verifycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="#CDAC8D"
            android:textSize="@dimen/f_26"
            android:clickable="true"
            android:onClick="onclick"/>
    </LinearLayout>

    <TextView
        style="@style/line_2_90_E2D7CC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_34px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/edit_register1_password"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="你的密码"
            android:inputType="textPassword"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            style="@style/edit_40_CCCCCC"/>

        <CheckBox
            android:id="@+id/cb_register1_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_password_show"
            android:background="@null"
            android:checked="false"/>
    </LinearLayout>


    <TextView
        android:id="@+id/v_register1_line3"
        style="@style/line_2_90_E2D7CC"/>

    <TextView
        android:id="@+id/tv_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入至少六位字符,必须包含字母和数字"
        android:layout_marginTop="@dimen/dimen_10px"
        android:textColor="@color/c_gray_ccc"
        android:textSize="@dimen/f_26"/>

    <TextView
        android:id="@+id/tv_register1_nextstep"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88px"
        android:background="@drawable/register1_nextstep"
        android:text="下一步"
        android:textColor="#F5F5F5"
        android:textSize="@dimen/f_36"
        android:layout_marginLeft="@dimen/dimen_10px"
        android:layout_marginRight="@dimen/dimen_10px"
        android:layout_marginTop="@dimen/dimen_86px"
        android:onClick="onclick"
        android:gravity="center"/>

</LinearLayout>