<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20px"
        android:layout_marginRight="@dimen/dimen_20px"
        android:background="@drawable/shape_solid_white_corner_14px"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="@dimen/dimen_20px"
                android:textColor="@color/c_black_55626e"
                android:textSize="@dimen/dimen_30px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/c_gray_d6e3f0" />

        <LinearLayout
            android:id="@+id/ll_post_bottom_second_reply_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100px"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_second_reply_or_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="回复"
                android:textColor="@color/c_black_55626e"
                android:textSize="@dimen/dimen_34px" />
        </LinearLayout>

        <View
            android:id="@+id/v_middle_second_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/c_gray_d6e3f0" />

        <LinearLayout
            android:id="@+id/ll_post_bottom_second_report_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100px"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="举报"
                android:textColor="@color/c_black_55626e"
                android:textSize="@dimen/dimen_34px" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_post_second_bottom_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100px"
        android:layout_marginBottom="@dimen/dimen_30px"
        android:layout_marginLeft="@dimen/dimen_20px"
        android:layout_marginRight="@dimen/dimen_20px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:background="@drawable/shape_solid_white_corner_14px"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/c_yellow_ffc84a"
        android:textSize="@dimen/f_34" />
</LinearLayout>
