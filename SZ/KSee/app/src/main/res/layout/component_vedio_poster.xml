<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="@dimen/dimen_420px"
            android:layout_height="@dimen/dimen_236px"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dimen_360px"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f_28"
            android:textColor="@color/c_black_3c4350"
            android:lines="1"
            android:ellipsize="end"
            android:lineSpacingMultiplier="0.9"
            android:lineSpacingExtra="@dimen/dimen_12px"
            android:layout_marginTop="@dimen/dimen_20px"
            android:layout_marginBottom="@dimen/dimen_30px"/>

    </LinearLayout>

</RelativeLayout>