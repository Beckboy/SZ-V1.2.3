<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_40px"
        android:text="请选择支付方式"
        android:textColor="@color/c_gray_9da1a7"
        android:textSize="@dimen/dimen_28px" />


    <RelativeLayout
        android:id="@+id/rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:layout_marginTop="@dimen/dimen_70px"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/icon_alipay"
            android:layout_width="@dimen/dimen_48px"
            android:layout_height="@dimen/dimen_48px"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_order_alipay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@id/icon_alipay"
            android:text="支付宝支付" />


        <ImageView
            android:id="@+id/img_alipay_tag"
            android:layout_width="@dimen/dimen_36px"
            android:layout_height="@dimen/dimen_36px"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="@drawable/icon_pay_selected" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:background="@color/c_gray_e5" />


    <RelativeLayout
        android:id="@+id/rl_wechat_pay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/common_padding"
        android:layout_marginRight="@dimen/common_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">


        <ImageView
            android:id="@+id/img_pay_wechat"
            android:layout_width="@dimen/dimen_48px"
            android:layout_height="@dimen/dimen_48px"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_order_wechatpay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_padding"
            android:layout_toRightOf="@id/img_pay_wechat"
            android:text="微信支付" />


        <ImageView
            android:id="@+id/img_wechat_tag"
            android:layout_width="@dimen/dimen_36px"
            android:layout_height="@dimen/dimen_36px"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="@drawable/icon_pay_normal" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_88px"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_60px"
        android:layout_marginTop="@dimen/dimen_70px"
        android:background="@color/c_yellow_cdac8d"
        android:textSize="@dimen/font_size_15sp"
        android:textColor="@color/white"
        android:text="确认"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40px" />
</LinearLayout>
