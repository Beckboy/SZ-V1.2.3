<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_receipt_diss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66666666"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F9F9F9">

        <TextView
            android:id="@+id/btn_receipt_receipt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_108px"
            android:text="收据"
            android:paddingLeft="@dimen/dimen_192px"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="#3C4350"
            android:textSize="@dimen/f_28"
            android:onClick="onClick"
            android:visibility="visible"/>

        <View
            android:id="@+id/v_receipt_receipt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="#E5E5E5"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/btn_receipt_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_108px"
            android:text="增值税普通发票"
            android:paddingLeft="@dimen/dimen_192px"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="#3C4350"
            android:textSize="@dimen/f_28"
            android:onClick="onClick"/>

        <View
            android:id="@+id/v_receipt_normal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="#E5E5E5"/>

        <TextView
            android:id="@+id/btn_receipt_special"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_108px"
            android:text="增值税专用发票"
            android:paddingLeft="@dimen/dimen_192px"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="#3C4350"
            android:textSize="@dimen/f_28"
            android:onClick="onClick"/>
    </LinearLayout>

</RelativeLayout>