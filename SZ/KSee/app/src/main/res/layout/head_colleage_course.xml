<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_30px"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统课"
            android:lineSpacingMultiplier="0.9"
            android:includeFontPadding="false"
            android:textColor="#343A44"
            android:textSize="@dimen/f_36"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/ll_course_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_30px">
            <ImageView
                android:id="@+id/img_course_one"
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:scaleType="fitXY"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img_course_two"
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:scaleType="fitXY" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20px"/>

        <LinearLayout
            android:id="@+id/ll_course_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_course_three"
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:scaleType="fitXY"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img_course_four"
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#EEEEEE"
                android:scaleType="fitXY" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>