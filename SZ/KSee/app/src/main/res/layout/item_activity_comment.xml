<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_padding"
        android:paddingRight="@dimen/common_padding"
        android:paddingTop="@dimen/dimen_30px"
        android:paddingBottom="@dimen/dimen_30px">

        <com.junhsue.ksee.view.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/dimen_96px"
            android:layout_height="@dimen/dimen_96px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_16px"
            android:layout_toRightOf="@id/imgAvatar"
            android:layout_marginTop="@dimen/dimen_10px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_black_3c4350"
                android:textSize="@dimen/common_font_size_normal"
                android:text="maimai"/>

            <TextView
                android:id="@+id/txt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_gray_919499"
                android:textSize="@dimen/commmon_font_size_small"
                android:layout_marginTop="@dimen/dimen_10px"
                android:text="1w"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgAvatar"
            android:layout_marginTop="@dimen/dimen_20px"
            android:textColor="@color/c_black_3c4350"
            android:textSize="@dimen/common_font_size_normal"
            android:maxLines="3"
            />

        <TextView
            android:id="@+id/txt_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_comment"
            android:layout_marginTop="@dimen/dimen_20px"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/commmon_font_size_small"
            android:textColor="@color/c_gray_8392a0"
            android:text="7分钟"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/c_gray_e5"
        />
</LinearLayout>
