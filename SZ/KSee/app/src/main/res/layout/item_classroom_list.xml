<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_30px"
        android:paddingRight="@dimen/dimen_30px"
        android:paddingTop="@dimen/dimen_36px"
        android:paddingBottom="@dimen/dimen_36px">

        <RelativeLayout
            android:id="@+id/rl_class_room"
            android:layout_width="@dimen/dimen_128px"
            android:layout_height="@dimen/dimen_128px"
            android:layout_marginRight="@dimen/dimen_14px">
            <ImageView
                android:id="@+id/icv_class_room_poter"
                android:layout_width="@dimen/dimen_120px"
                android:layout_height="@dimen/dimen_120px"
                android:scaleType="fitXY"
                android:focusable="false"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/icv_class_room_unread"
                android:layout_width="@dimen/dimen_20px"
                android:layout_height="@dimen/dimen_20px"
                android:focusable="false"
                android:background="@drawable/shape_circle_red"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_classroom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f_34"
            android:textColor="@color/c_black_222"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/dimen_110px"
            android:layout_toRightOf="@+id/rl_class_room"
            android:layout_marginTop="@dimen/dimen_14px"/>

        <TextView
            android:id="@+id/tv_classroom_last_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/f_26"
            android:textColor="#ff0000"
            android:layout_alignLeft="@+id/tv_classroom_title"
            android:layout_alignBottom="@+id/tv_classroom_last_content"
            android:layout_alignBaseline="@+id/tv_classroom_last_content"
            android:layout_below="@+id/tv_classroom_title"
            android:layout_marginTop="@dimen/dimen_30px"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_classroom_last_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/f_26"
            android:textColor="@color/c_gray_999"
            android:layout_toRightOf="@+id/tv_classroom_last_cont"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_50px"/>

        <TextView
            android:id="@+id/tv_classroom_last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f_24"
            android:textColor="@color/c_gray_999"
            android:layout_marginTop="@dimen/dimen_16px"
            android:layout_alignParentRight="true"/>
        
    </RelativeLayout>
</RelativeLayout>