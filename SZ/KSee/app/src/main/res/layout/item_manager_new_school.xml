<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/img_top_right"
                android:layout_width="250px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="250px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                android:layout_alignLeft="@+id/img_top_right"
                android:layout_alignRight="@id/img_top_right"
                android:layout_alignTop="@+id/img_top_right"
                android:layout_alignBottom="@+id/img_top_right"
                android:background="@drawable/bg_blur"
                />
            <TextView
                android:id="@+id/tv_top_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/f_30"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_above="@+id/tv_top_right_des"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_top_right"
                android:layout_alignRight="@id/img_top_right"
                />
            <TextView
                android:id="@+id/tv_top_right_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/f_26"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/img_top_right"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13px"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_top_right"
                android:layout_alignRight="@id/img_top_right"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_top_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_top_right"
            android:layout_alignBottom="@+id/rl_top_right"
            android:layout_marginRight="@dimen/dimen_6px"
            android:layout_toLeftOf="@+id/rl_top_right">
            <ImageView
                android:id="@+id/img_top_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_alignLeft="@+id/img_top_left"
                android:layout_alignRight="@id/img_top_left"
                android:layout_alignTop="@+id/img_top_left"
                android:layout_alignBottom="@+id/img_top_left"
                android:background="@drawable/bg_longblur"
                />
            <TextView
                android:id="@+id/tv_top_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/f_30"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/img_top_left"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8px"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bottom_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_6px"
            android:layout_below="@+id/rl_top_right"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/img_bottom_right"
                android:layout_width="250px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="250px"
                android:layout_height="250px"
                android:scaleType="fitXY"
                android:layout_alignLeft="@+id/img_bottom_right"
                android:layout_alignRight="@id/img_bottom_right"
                android:layout_alignTop="@+id/img_bottom_right"
                android:layout_alignBottom="@+id/img_bottom_right"
                android:background="@drawable/bg_blur"
                />
            <TextView
                android:id="@+id/tv_bottom_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/f_30"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_above="@+id/tv_bottom_right_des"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_bottom_right"
                android:layout_alignRight="@id/img_bottom_right"
                />
            <TextView
                android:id="@+id/tv_bottom_right_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/f_26"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/img_bottom_right"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13px"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_bottom_right"
                android:layout_alignRight="@id/img_bottom_right"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_6px"
            android:layout_alignTop="@+id/rl_bottom_right"
            android:layout_alignBottom="@+id/rl_bottom_right"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/img_bottom_left"
                android:layout_width="@dimen/dimen_250px"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="@dimen/dimen_250px"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_alignLeft="@+id/img_bottom_left"
                android:layout_alignRight="@+id/img_bottom_left"
                android:layout_alignTop="@+id/img_bottom_left"
                android:layout_alignBottom="@+id/img_bottom_left"
                android:background="@drawable/bg_blur"
                />
            <TextView
                android:id="@+id/tv_bottom_left_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/f_30"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_above="@+id/tv_bottom_left_des"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_bottom_left"
                android:layout_alignRight="@id/img_bottom_left"
                />
            <TextView
                android:id="@+id/tv_bottom_left_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/f_26"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/img_bottom_left"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13px"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_bottom_left"
                android:layout_alignRight="@id/img_bottom_left"
                />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bottom_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_6px"
            android:layout_alignTop="@+id/rl_bottom_right"
            android:layout_alignBottom="@+id/rl_bottom_right"
            android:layout_toLeftOf="@+id/rl_bottom_right"
            android:layout_toRightOf="@+id/rl_bottom_left">
            <ImageView
                android:id="@+id/img_bottom_middle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_alignLeft="@+id/img_bottom_middle"
                android:layout_alignRight="@id/img_bottom_middle"
                android:layout_alignTop="@+id/img_bottom_middle"
                android:layout_alignBottom="@+id/img_bottom_middle"
                android:background="@drawable/bg_blur"
                />
            <TextView
                android:id="@+id/tv_bottom_middle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/f_30"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_above="@+id/tv_bottom_middle_des"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_bottom_middle"
                android:layout_alignRight="@id/img_bottom_middle"
                />
            <TextView
                android:id="@+id/tv_bottom_middle_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/f_26"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignBottom="@+id/img_bottom_middle"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13px"
                android:layout_marginRight="@dimen/dimen_14px"
                android:layout_marginLeft="@dimen/dimen_14px"
                android:layout_alignLeft="@+id/img_bottom_middle"
                android:layout_alignRight="@id/img_bottom_middle"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="@dimen/dimen_200px"
            android:layout_height="@dimen/dimen_64px"
            android:text="英语学校"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/f_36"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@drawable/blue_title"
            android:orientation="horizontal" />

    </RelativeLayout>


</LinearLayout>