<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/bg_msg_card"
    android:orientation="vertical"

    android:padding="@dimen/common_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50px"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_tag"
            android:layout_width="@dimen/dimen_50px"
            android:layout_height="@dimen/dimen_50px"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_msg_colleage" />

        <TextView
            android:id="@+id/txt_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_toRightOf="@id/img_tag"
            android:text="活动"
            android:textColor="@color/c_yellow_cdac8d"
            android:textSize="@dimen/commmon_font_size_small" />


        <ImageView
            android:id="@+id/img_tag_new"
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_tag_name"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_tag_new" />


        <LinearLayout
            android:id="@+id/ll_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:gravity="right">

            <ImageView
                android:layout_width="@dimen/dimen_50px"
                android:layout_height="@dimen/dimen_50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_msg_more" />
        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/dimen_20px"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@drawable/img_default_course_system" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20px">


        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/c_yellow_cdac8d"
                android:textSize="@dimen/font_size_15sp" />

            <TextView
                android:id="@+id/txt_activity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:textColor="@color/c_yellow_cdac8d"
                android:textSize="@dimen/font_size_26sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/ll_price"
            android:text="activit_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/c_black_3c4350"
            android:textSize="@dimen/common_font_size_x" />


        <TextView
            android:id="@+id/txt_activity_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_activity_title"
            android:layout_marginTop="@dimen/dimen_24px"
            android:text="截止日期: 2017/03/06"
            android:textColor="@color/c_gray_999"
            android:textSize="@dimen/font_size_15sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_40px"
        android:background="@drawable/bg_msg_btn"
        android:text="了解详情"
        android:focusable="false"
        android:textColor="@color/c_yellow_cdac8d"
        android:textSize="@dimen/common_font_size_normal" />
</LinearLayout>
