<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/common_padding"
    android:baselineAligned="false">


    <TextView
        android:id="@+id/txt_answer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/font_size_15sp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/c_gray_8392a0"
        android:text="title"/>

    <TextView
        android:id="@+id/_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_14px"
        android:textSize="@dimen/font_size_13sp"
        android:textColor="@color/c_gray_9da1a7"
        android:text="问题"/>
</LinearLayout>
