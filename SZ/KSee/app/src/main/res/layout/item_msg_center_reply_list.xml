<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/page_base_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dimen_30px"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/dimen_40px"
                    android:layout_marginRight="@dimen/dimen_30px"
                    android:layout_toLeftOf="@+id/tv_hint"
                    android:layout_centerVertical="true"
                    android:background="#D6E3F0"/>

                <TextView
                    android:id="@+id/tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="没有更多新的消息"
                    android:layout_centerHorizontal="true"
                    style="@style/text_f_28_aebdcd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:layout_marginRight="@dimen/dimen_40px"
                    android:layout_toRightOf="@+id/tv_hint"
                    android:layout_centerVertical="true"
                    android:background="#D6E3F0"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dimen_40px"
        android:paddingLeft="@dimen/dimen_10px"
        android:paddingRight="@dimen/dimen_40px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_red_circle"
            android:layout_width="@dimen/dimen_16px"
            android:layout_height="@dimen/dimen_16px"
            android:background="@drawable/shape_circle_red"/>

        <com.junhsue.ksee.view.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="@dimen/dimen_50px"
            android:layout_height="@dimen/dimen_50px"
            android:layout_marginLeft="@dimen/dimen_14px"
            android:src="@drawable/pic_default_avatar"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再买皮肤就剁手"
            android:textSize="@dimen/f_28"
            android:textColor="@color/c_black_55626e"
            android:paddingLeft="@dimen/dimen_10px"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            style="@style/text_f_24_c_aebdcd"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_70px"
        android:paddingTop="@dimen/dimen_20px"
        android:paddingBottom="@dimen/dimen_20px"
        android:paddingRight="@dimen/dimen_40px"
        style="@style/text_f_30_c_black_55626e"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_f_30_95a3b1"
        android:padding="@dimen/dimen_20px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:layout_marginBottom="@dimen/dimen_40px"
        android:text="评论 我的帖子:新人报道专用贴，不要害羞，快来介绍下自己吧！"
        android:background="@drawable/shape_rec_radius_10px_f3f6f7"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30px"
        android:background="@color/page_base_background"/>

    </LinearLayout>


</RelativeLayout>