<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_padding"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50px"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_tag"
            android:layout_width="@dimen/dimen_50px"
            android:layout_height="@dimen/dimen_50px"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_msg_system_update" />

        <TextView
            android:id="@+id/txt_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:layout_toRightOf="@id/img_tag"
            android:text="系统"
            android:textColor="@color/c_yellow_cdac8d"
            android:textSize="@dimen/commmon_font_size_small" />


        <ImageView
            android:id="@+id/img_tag_new"
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_tag_name"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_tag_new"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_system_update_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:gravity="right">

            <ImageView
                android:layout_width="@dimen/dimen_50px"
                android:layout_height="@dimen/dimen_50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_msg_more" />
        </LinearLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/txt_system_udapte_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_70px"
        android:layout_marginTop="@dimen/dimen_20px"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/msg_question_title"
        android:textColor="@color/c_black_3c4350"
        android:textSize="@dimen/common_font_size_x" />


    <TextView
        android:id="@+id/txt_system_update_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_70px"
        android:layout_marginTop="@dimen/dimen_15px"
        android:lineSpacingMultiplier="1.2"
        android:ellipsize="end"
        android:text="内容"
        android:textSize="@dimen/font_size_15sp" />



    <Button
        android:id="@+id/btn_system_update"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_60px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_40px"
        android:background="@drawable/bg_msg_btn"
        android:focusable="false"
        android:text="立即升级"
        android:textColor="@color/c_yellow_cdac8d"
        android:textSize="@dimen/common_font_size_normal" />
</LinearLayout>
