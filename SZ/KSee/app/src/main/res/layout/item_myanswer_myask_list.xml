<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_ask_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dimen_30px"
        android:paddingLeft="@dimen/dimen_30px"
        android:layout_marginTop="@dimen/dimen_30px" >
        <com.junhsue.ksee.view.CircleImageView
            android:id="@+id/civ_avatar_myask"
            android:layout_width="@dimen/dimen_60px"
            android:layout_height="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_10px"
            android:src="@drawable/pic_default_avatar"/>

        <TextView
            android:id="@+id/tv_name_myask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/civ_avatar_myask"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_myask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ask_title"
        android:layout_marginTop="@dimen/dimen_14px"
        android:paddingLeft="@dimen/dimen_30px"
        android:paddingRight="@dimen/dimen_30px"
        android:orientation="vertical">

        <!--被邀请的标题-->
        <TextView
            android:id="@+id/tv_title_myask"
            style="@style/text_f_36_c_3c4350"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <!--被邀请的内容-->
        <TextView
            android:id="@+id/tv_content_myask"
            style="@style/text_f_30_c_9da1a7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen_6px"
            />
        <!--话题类别-->
        <TextView
            android:id="@+id/tv_topic_myask"
            style="@style/text_f_24_c_8392a0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_8px"
            android:layout_marginTop="@dimen/dimen_10px"
            android:background="@drawable/shape_solid_gray_e5_corners_4px"
            />
    </LinearLayout>
    <View
        android:id="@+id/view_myask"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/c_gray_e5"
        android:layout_below="@+id/ll_myask"
        android:layout_marginTop="@dimen/dimen_30px"
        android:layout_alignLeft="@id/civ_avatar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_myask">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dimen_15px"
            android:paddingRight="@dimen/dimen_30px"
            android:paddingTop="@dimen/dimen_24px"
            android:paddingBottom="@dimen/dimen_24px"
            android:layout_below="@+id/view_bottom">
            <TextView
                android:id="@+id/tv_answer_myask"
                style="@style/text_f_24_c_8392a0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/tv_collect_myask"
                style="@style/text_f_24_c_8392a0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_30px"
                android:layout_toRightOf="@+id/tv_answer_myask"
                />
            <TextView
                android:id="@+id/tv_date_myask"
                style="@style/text_f_24_c_8392a0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20px"
            android:background="#F5F5F5"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>