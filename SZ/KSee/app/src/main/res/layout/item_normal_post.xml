<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_40px"
        android:paddingRight="@dimen/dimen_40px"
        android:paddingTop="@dimen/dimen_46px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_solid_55626e_coner_10px" />

            <TextView
                android:id="@+id/tv_circle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_6px"
                android:text="师生范没了"
                android:textColor="@color/c_black_55626e"
                android:textSize="@dimen/f_24" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10px"
            android:layout_marginTop="@dimen/dimen_20px">

            <TextView
                android:id="@+id/tv_home_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2px"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dimen_10px"
                android:textColor="@color/c_black_55626e"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/iv_post_select_tag"
                android:layout_width="@dimen/dimen_50px"
                android:layout_height="@dimen/dimen_50px"
                android:background="@drawable/icon_home_post_selection" />
        </RelativeLayout>

        <include
            android:id="@+id/rl_middle_horizontal"
            layout="@layout/component_middle_horizontal_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/rl_middle_vertical"
            layout="@layout/component_middle_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_home_post_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100px"
            android:layout_marginTop="@dimen/dimen_10px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_home_post_create_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dimen_40px">

                <TextView
                    android:id="@+id/tv_home_post_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_gray_aebdcd"
                    android:textSize="@dimen/f_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_bottom_comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_38px"
                    android:layout_height="@dimen/dimen_38px"
                    android:background="@drawable/icon_post_group" />

                <TextView
                    android:id="@+id/tv_home_post_comment_total_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10px"
                    android:textColor="@color/c_gray_aebdcd"
                    android:textSize="@dimen/f_24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_bottom_approval_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home_post_approval"
                    android:layout_width="@dimen/dimen_50px"
                    android:layout_height="@dimen/dimen_50px" />

                <TextView
                    android:id="@+id/tv_home_post_approval_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_gray_aebdcd"
                    android:textSize="@dimen/f_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_home_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30px"
        android:background="@color/page_commuity_background" />
</LinearLayout>
