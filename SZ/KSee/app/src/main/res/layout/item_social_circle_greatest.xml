<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:background="@color/c_gray_e5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_divider"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"
        android:paddingBottom="@dimen/dimen_44px"
        android:paddingTop="@dimen/dimen_44px">

        <View
            android:id="@+id/v_txt_divier"
            android:layout_marginTop="@dimen/dimen_6px"
            android:layout_width="@dimen/dimen_4px"
            android:layout_height="@dimen/dimen_30px"
            android:background="@color/c_yellow_cdac8d" />

        <TextView
            android:id="@+id/tv_greatest_title"
            style="@style/text_f_30_c_3c4350"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10px"
            android:lineSpacingMultiplier="0.9"
            android:lineSpacingExtra="5dp"
            android:layout_toRightOf="@+id/v_txt_divier"
            />
    </RelativeLayout>
</RelativeLayout>