<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_solution_list" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rounded_image_view"
            android:layout_width="80dp"
            android:layout_height="95dp"
            app:riv_corner_radius="@dimen/dimen_20px"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="9dp" />


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rounded_image_view"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/rounded_image_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_solution_list_tag"
                android:text="12323"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:textColor="@color/white"
                android:textSize="@dimen/commmon_font_size_small" />


            <ImageView
                android:layout_width="12dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/dimen_8px"
                android:background="@drawable/icon_open_eye" />

            <TextView
                android:id="@+id/txt_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.4k浏览"
                android:textColor="@color/c_gray_ccc"
                android:textSize="@dimen/f_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bottom"
            android:layout_alignLeft="@id/ll_bottom"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/common_font_size_medium"
            android:textColor="@color/c_black_55626e"
            android:text="title"
            />

    </RelativeLayout>


</RelativeLayout>
