<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_380px"
        android:background="@color/page_base_background"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_40px"
        android:paddingTop="@dimen/dimen_40px"
        android:paddingRight="@dimen/dimen_40px"
        android:paddingBottom="@dimen/dimen_40px"
        android:clickable="true">

        <ImageView
            android:layout_width="@dimen/dimen_40px"
            android:layout_height="@dimen/dimen_40px"
            android:background="@drawable/selector_tabs_head_back"/>

    </LinearLayout>

</RelativeLayout>